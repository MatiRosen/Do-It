<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_layout_project_creation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProjectCreationFragment">


    <TextView
        android:id="@+id/txt_project_creation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/project_creation_new_project"
        android:textColor="@color/dark_pantone"
        android:textSize="@dimen/txt_main_title_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_project_creation_top_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/top_content_padding" />

    <LinearLayout
        android:id="@+id/linearLayout_project_creation_form"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_project_creation_top_padding">

        <EditText
            android:id="@+id/edit_txt_project_creation_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_txt_height"
            android:layout_marginBottom="@dimen/divider_bottom_padding"
            android:autofillHints=""
            android:background="@drawable/style_edittext"
            android:hint="@string/project_creation_project_title"
            android:inputType="text"
            android:padding="@dimen/input_txt_padding"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_input_size" />

        <Spinner
            android:id="@+id/spinner_project_creation_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/divider_top_padding"
            android:layout_marginBottom="@dimen/divider_bottom_padding"
            android:background="@drawable/style_edittext" />

        <!-- TODO: Cambiar aspecto del botÃ³n para que se vea como el de figma. -->
        <Button
            android:id="@+id/btn_project_creation_add_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/divider_top_padding"
            android:layout_marginBottom="@dimen/divider_bottom_padding"
            android:background="@drawable/style_button_project_creation"
            android:text="@string/project_creation_project_image"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_button_size" />


        <EditText
            android:id="@+id/edit_txt_project_creation_description"
            android:layout_width="match_parent"
            android:layout_height="@dimen/project_creation_min_description_height"
            android:layout_marginTop="@dimen/divider_top_padding"
            android:layout_marginBottom="@dimen/divider_bottom_padding"
            android:autofillHints=""
            android:background="@drawable/style_edittext"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/project_creation_project_description"
            android:inputType="textMultiLine"
            android:padding="@dimen/input_txt_padding"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_input_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout_project_creation_form">

            <EditText
                android:id="@+id/edit_txt_project_creation_min_budget"
                android:layout_width="0dp"
                android:layout_height="@dimen/input_txt_height"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/divider_top_padding"
                android:layout_marginEnd="@dimen/input_end_padding"
                android:layout_marginBottom="@dimen/divider_bottom_padding"
                android:autofillHints=""
                android:background="@drawable/style_edittext"
                android:hint="@string/project_creation_project_min_budget"
                android:inputType="numberDecimal"
                android:padding="@dimen/input_txt_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_input_size" />

            <EditText
                android:id="@+id/edit_txt_project_creation_total_budget"
                android:layout_width="0dp"
                android:layout_height="@dimen/input_txt_height"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/input_start_padding"
                android:layout_marginTop="@dimen/divider_top_padding"
                android:layout_marginBottom="@dimen/divider_bottom_padding"
                android:autofillHints=""
                android:background="@drawable/style_edittext"
                android:hint="@string/project_creation_project_total_budget"
                android:inputType="numberDecimal"
                android:padding="@dimen/input_txt_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_input_size" />
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_project_creation_bottom_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/bottom_content_padding" />

    <Button
        android:id="@+id/btn_project_creation_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/style_button"
        android:text="@string/project_creation_save"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_button_size"
        app:layout_constraintTop_toBottomOf="@+id/guideline_project_creation_bottom_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>